import json
from jsondiff import diff

def compare_json(file1, file2, identifier):
    with open(file1, 'r') as f1, open(file2, 'r') as f2:
        json1 = json.load(f1)
        json2 = json.load(f2)
        
        differences = diff(json1, json2, identifier=identifier)
        
        if differences:
            print("Differences found:")
            print(json.dumps(differences, indent=4))
        else:
            print("No differences found.")

# Provide the file paths for the JSON files you want to compare
file_path1 = 'path/to/file1.json'
file_path2 = 'path/to/file2.json'

# Specify the fields to be used as the identifier
identifier = ['id', 'name']

compare_json(file_path1, file_path2, identifier)
