import pandas as pd
import json

# Define the paths to the Excel files
excel_file1 = "path/to/excel_file1.xlsx"
excel_file2 = "path/to/excel_file2.xlsx"

# Define the output paths for the JSON files
json_file1 = "path/to/output_file1.json"
json_file2 = "path/to/output_file2.json"

# Read data from Excel files
data1 = pd.read_excel(excel_file1)
data2 = pd.read_excel(excel_file2)

# Convert data to JSON
json_data1 = data1.to_json(orient="records")
json_data2 = data2.to_json(orient="records")

# Write JSON data to files
with open(json_file1, "w") as file1:
    file1.write(json_data1)

with open(json_file2, "w") as file2:
    file2.write(json_data2)

# Print success message
print("Data conversion completed. JSON files created.")
