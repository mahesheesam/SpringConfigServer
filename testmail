import org.apache.commons.csv.CSVFormat;
import org.apache.commons.csv.CSVRecord;

import java.io.FileReader;
import java.io.IOException;
import java.io.Reader;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class CSVCamelCaseChecker {

    // Method to check if a string is in camelCase
    public static boolean isCamelCase(String str) {
        if (str == null) {
            return false;
        }
        // Regex to check for camelCase
        String camelCasePattern = "([a-z]+[A-Z][a-z]*)";
        Pattern pattern = Pattern.compile(camelCasePattern);
        Matcher matcher = pattern.matcher(str);
        return matcher.find();
    }

    public static void main(String[] args) {
        String filePath = "path/to/your/csvfile.csv";  // Replace with your CSV file path
        String columnToCheck = "yourColumnName";       // Replace with your CSV column name

        try {
            Reader in = new FileReader(filePath);
            Iterable<CSVRecord> records = CSVFormat.DEFAULT
                .withFirstRecordAsHeader()   // Assumes the first row is header
                .parse(in);

            for (CSVRecord record : records) {
                String columnValue = record.get(columnToCheck);  // Get the value of the specified column
                
                // Check if the value is in camelCase
                if (isCamelCase(columnValue)) {
                    System.out.println("CamelCase Detected: " + columnValue);
                } else {
                    System.out.println("No CamelCase: " + columnValue);
                }
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
