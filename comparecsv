import csv

# Read the first CSV file
csv_file1 = "file1.csv"
data1 = []
with open(csv_file1, "r") as file:
    reader = csv.DictReader(file)
    data1 = list(reader)

# Read the second CSV file
csv_file2 = "file2.csv"
data2 = []
with open(csv_file2, "r") as file:
    reader = csv.DictReader(file)
    data2 = list(reader)

# Get the headers and sort them
headers = sorted(data1[0].keys())

# Reorder the columns in both datasets based on the sorted headers
reordered_data1 = [{header: row[header] for header in headers} for row in data1]
reordered_data2 = [{header: row[header] for header in headers} for row in data2]

# Write the reordered data to new CSV files
reordered_csv_file1 = "reordered_file1.csv"
with open(reordered_csv_file1, "w", newline="") as file:
    writer = csv.DictWriter(file, fieldnames=headers)
    writer.writeheader()
    writer.writerows(reordered_data1)

reordered_csv_file2 = "reordered_file2.csv"
with open(reordered_csv_file2, "w", newline="") as file:
    writer = csv.DictWriter(file, fieldnames=headers)
    writer.writeheader()
    writer.writerows(reordered_data2)

# Now you can compare the content of the new CSV files
# You can use file comparison tools or read the files and compare the data programmatically.
